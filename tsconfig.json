{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "@playwright/test"
    ]
  },
  "include": [
    "tests/**/*.ts",
    "playwright.config.ts",
    "global-setup.ts"
  ]
}